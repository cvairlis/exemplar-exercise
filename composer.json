{
    "name": "cvairlis/exemplar-exercise",
    "description": "Exemplar exercise answers to practice new concepts of php.",
    "type": "library",
    "require": {
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "ExemplarCode\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpunit":"vendor/bin/phpunit",
        "php-fix": [
            "php-cs-fixer fix ."
        ]
    }
}
